@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5">
    <div class="row align-items-center">
        <!-- Left Column: Welcome Text -->
        <div class="col-md-6">
            <h1 class="display-4 fw-bold">Welcome to Task Manager</h1>
            <p class="lead text-muted">
                Manage your tasks efficiently. Keep track of what matters most,
                stay organized, and get more done every day.
            </p>

            @if (User.Identity.IsAuthenticated)
            {
                <h2 class="mt-4">Hello, @User.Identity.Name 👋</h2>
                <p class="text-muted">Ready to organize your day?</p>
                <div class="mt-3">
                     @if (User.IsInRole("Admin"))
                        {
                            <a asp-controller="Tasks" asp-action="AssignTask" class="btn btn-primary btn-lg me-2">
                                <i class="bi bi-plus-circle"></i> New Task
                            </a>
                        }
                    <a asp-controller="Tasks" asp-action="Index" class="btn btn-outline-success btn-lg">
                        <i class="bi bi-list-task"></i> My Tasks
                    </a>
                </div>
            }
            else
            {
                <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg me-2">
                    <i class="bi bi-person-plus"></i> Get Started
                </a>
                <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary btn-lg">
                    <i class="bi bi-box-arrow-in-right"></i> Login
                </a>
            }
        </div>

        <!-- Right Column: Illustration -->
        <div class="col-md-6 text-center">
            <img src="https://cdn-icons-png.flaticon.com/512/3209/3209265.png"
                 alt="Task Management"
                 class="img-fluid"
                 style="max-width: 400px;">
        </div>
    </div>

    <!-- Features Section -->
    @{
        var features = new[]
        {
        new { Icon="bi-speedometer2", Title="Fast & Easy", Desc="Create and manage tasks with a clean and simple interface.", Color="primary" },
        new { Icon="bi-people", Title="Team Friendly", Desc="Assign tasks to team members and track their progress easily.", Color="success" },
        new { Icon="bi-shield-check", Title="Secure", Desc="Your data is protected with secure authentication and role-based access.", Color="warning" }
        };
    }

    <div class="row mt-5 text-center">
        <h2 class="mb-4">Why Choose Task Manager?</h2>
        @foreach (var f in features)
        {
            <div class="col-md-4 mb-3">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body">
                        <i class="bi @f.Icon display-4 text-@f.Color"></i>
                        <h5 class="mt-3">@f.Title</h5>
                        <p class="text-muted">@f.Desc</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
