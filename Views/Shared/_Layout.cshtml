    .bg-gradient {
    background: linear-gradient(135deg, #ffffff 0%, #e6e6e6 100%); /* light gradient */
    }

    .navbar .nav-link {
            color: black !important;
    }

     .navbar .navbar-brand {
            color: black !important;
    }
    </style>    

</body>
</html>
